<!DOCTYPE html>
<html>
  <head>
    <title>Wearware</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="row">
      <div class="col-3">
        <div class="circle">
          <br />
          WEARwares
          <br />
        </div>
      </div>
      <div class="col-4 slogan">
        The latest in streetwear and couture.
      </div>
      <div class="col-5 links">
        <%= link_to 'Chime In', '#' %>
        <%= link_to 'About Wearwares', '#' %>
      </div>
    </header>

    <hr />

    <br class="clear" />


    <%= yield %>


  </body>
</html>
